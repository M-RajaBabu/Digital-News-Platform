              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idToken\": \"google-id-token-here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/social-login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "social-login"]
            }
          }
        }
